{% macro selected_if(request, controllers, actions) %}
  {% if controllers|length == 0 or request.controller in controllers %}
    {% if actions|length == 0 or request.action in actions %}
      selected
    {% endif %}
  {% endif %}
{% endmacro %}

{% macro lang_tabs(langs) %}
  <div class="field field-tabs{% if langs|length == 1 %} field-hidden{% endif %}">
    {% for lang in langs %}
      <label for="{{ "tab-lang-"~lang.code }}">
        {% form.radio "lang", lang.code, false, {"id":"tab-lang-"~lang.code} %}
        {{ lang.name }}
      </label>
    {% endfor %}
    <p class="hint block">
      {{ "cms.lang_tabs.hint"|trans }}
    </p>
  </div>
{% endmacro %}